.todo-item
	box-sizing border-box
	width 100%
	
	display flex
	align-tems
	justify-content space-between
	
	padding 15px 25px 15px 15px
	margin-bottom 15px
	
	background #fff
	
	font-size 19px
	
	color #000
	
	box-shadow 5px 5px 8px 3px rgba(218,218,218,0.75)
	
	&__title
		box-sizing border-box
		line-height 25px
		min-width 250px
		border-bottom 1px solid transparent 
		word-wrap break-word
		flex auto
		margin 0 20px
		cursor text
		
		&--checked
			text-decoration line-through
			color #bbbbbb
		
		&:hover
			border-bottom-color #dadada
	
	&__input
		margin 0 12px
	
	&__remove
		cursor pointer
		margin-top 3px
		color #dadada
		font-size 16px
		flex-shrink 0
		
		&:hover
			color #b3b3b3