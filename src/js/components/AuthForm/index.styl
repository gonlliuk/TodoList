.auth-form
	box-sizing border-box
	width 50%
	min-width 400px
	
	margin 200px auto 0
	padding 15px 25px
	
	background #f2f2f2
	
	box-shadow 0 1px 7px 0 rgba(0, 0, 0, 0.37)
	
	&__header
		margin-bottom 40px
		text-align center
		font-size 24px
		color #000
	
	&__note
		margin-bottom 10px
		text-align center
		font-size 14px
		color #9b9b9b
	
	&__credentials
		margin-bottom 20px
	
	&__form-submit
		text-align center
		color red
	
	&__input
		margin-bottom 15px