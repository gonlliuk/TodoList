.input
	width 100%
	border 1px solid #dadada
	box-sizing border-box
	height 32px
	padding 0 8px
	
	font-size 15px
	font-family 'Roboto Thin'
	
	outline none
	
	&--borderBottom
		border: none
		border-bottom 1px solid #dadada
		height 26px
		font-size 19px
		padding-bottom 1px
	
	&:hover
		border-color #bababa
		
	&:focus
		border-color #399bff
	&:disabled
		color #a0a0a0